@model IEnumerable<FutureValuesModel>
@{
    
    ViewData["Title"] = "Home Page";
}

<table class="table table-hover" id="futureValues">
    <caption>Previously Computed Values</caption>
    <thead class="thead-light">
        <tr>
            <th>Present Value</th>
            <th>Lower Bound Interest</th>
            <th>Upper Bound Interest</th>
            <th>Incremental Rate</th>
            <th>Maturity Years</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="table-@item.FutureValuesId" data-toggle="collapse" data-target="#executionDetails-@item.FutureValuesId" aria-expanded="false" aria-controls="executionDetails-@item.FutureValuesId">
                <td style="text-align: center;">@item.PresentValue</td>
                <td style="text-align: center;">@item.LowerBoundInterest</td>
                <td style="text-align: center;">@item.UpperBoundInterest</td>
                <td style="text-align: center;">@item.IncrementalRate</td>
                <td style="text-align: center;">@item.MaturityYears</td>
            </tr>
            <tr id="executionDetails-@item.FutureValuesId" aria-labelledby="table-@item.FutureValuesId" class="collapse" data-parent="#futureValues" style="padding: 0 !important;">
                <td colspan="6">
                        <table class="table-striped" id="executionDetails">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Year</th>
                                    <th>Value</th> <!--Value-->
                                    <th>Interest Rate</th>
                                    <th>Future Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var executionDetail in item.ExecutionDetails)
                                {
                                    <tr>
                                        <td style="text-align: center;">@executionDetail.Year</td>
                                        <td style="text-align: center;">@executionDetail.Value</td>
                                        <td style="text-align: center;">@executionDetail.InterestRate</td>
                                        <td style="text-align: center;">@executionDetail.FutureValue</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                </td>
            </tr>
        }
    </tbody>    
</table>
