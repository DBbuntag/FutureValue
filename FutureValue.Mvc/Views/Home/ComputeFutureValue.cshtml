@model FutureValuesModel

@{
    ViewData["Title"] = "Compute for Future Value";
    List<ExecutionDetailsModel> executionDetailsModel = ViewData["ExecutionDetailsList"] as List<ExecutionDetailsModel>;
}
@*<h1>@ViewData["Title"]</h1>*@

<div class="form-body">
    <form asp-controller="Home" asp-action="ComputeFutureValue" method="post" id="computeForm" role="form">
        @Html.HiddenFor(model => model.FutureValuesId);
        <div class="form-group">
            @Html.LabelFor(model => model.PresentValue)
            @Html.TextBoxFor(model => model.PresentValue)
            @Html.ValidationMessageFor(model => model.PresentValue, "", new { @class=".text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LowerBoundInterest)
            @Html.TextBoxFor(model => model.LowerBoundInterest)
            @Html.ValidationMessageFor(model => model.LowerBoundInterest, "", new { @class=".text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UpperBoundInterest)
            @Html.TextBoxFor(model => model.UpperBoundInterest)
            @Html.ValidationMessageFor(model => model.UpperBoundInterest, "", new { @class=".text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IncrementalRate)
            @Html.TextBoxFor(model => model.IncrementalRate)
            @Html.ValidationMessageFor(model => model.IncrementalRate, "", new { @class=".text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaturityYears)
            @Html.TextBoxFor(model => model.MaturityYears)
            @Html.ValidationMessageFor(model => model.MaturityYears, "", new { @class=".text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
            <input type="reset" class="btn btn-primary" value="Clear" id="btnClear" />
        </div>
    </form>
</div>

@if(executionDetailsModel != null)
{
<table class="table table-light">
    <thead>
        <tr>
            <th>Year</th>
            <th></th> <!--Value column-->
            <th>Interest Rate</th>
            <th>Future Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in executionDetailsModel)
        {
        <tr>
            <td>@item.Year</td>
            <td>@item.Value</td>
            <td>@item.InterestRate</td>
            <td>@item.FutureValue</td>
        </tr>
        }
    </tbody>
</table>
}
